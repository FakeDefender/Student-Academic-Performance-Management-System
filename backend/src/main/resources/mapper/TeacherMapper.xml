<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fx.backend.mapper.TeacherMapper">

    <resultMap id="TeacherResultMap" type="com.fx.backend.domain.entity.Teacher">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="teacherId" column="teacher_id"/>
        <result property="name" column="name"/>
        <result property="department" column="department"/>
        <result property="title" column="title"/>
        <result property="phone" column="phone"/>
        <result property="office" column="office"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <insert id="insert" parameterType="com.fx.backend.domain.entity.Teacher" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO teachers (user_id, teacher_id, name, department, title, phone, office)
        VALUES (#{userId}, #{teacherId}, #{name}, #{department}, #{title}, #{phone}, #{office})
    </insert>

    <select id="findById" resultMap="TeacherResultMap">
        SELECT * FROM teachers WHERE id = #{id}
    </select>

    <select id="findByTeacherId" resultMap="TeacherResultMap">
        SELECT * FROM teachers WHERE teacher_id = #{teacherId}
    </select>

    <select id="findByUserId" resultMap="TeacherResultMap">
        SELECT * FROM teachers WHERE user_id = #{userId}
    </select>

    <select id="findByTeacherNumber" resultMap="TeacherResultMap">
        SELECT * FROM teachers WHERE teacher_id = #{teacherNumber}
    </select>

    <update id="update" parameterType="com.fx.backend.domain.entity.Teacher">
        UPDATE teachers
        SET name = #{name}, department = #{department}, title = #{title}, phone = #{phone}, office = #{office}
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM teachers WHERE id = #{id}
    </delete>

    <select id="page" resultMap="TeacherResultMap">
        SELECT *
        FROM teachers
        <where>
            <if test="keyword != null and keyword != ''">
                (name LIKE CONCAT('%', #{keyword}, '%') OR teacher_id LIKE CONCAT('%', #{keyword}, '%'))
            </if>
            <if test="department != null and department != ''">
                AND department = #{department}
            </if>
        </where>
        ORDER BY created_at DESC
        LIMIT #{pageSize} OFFSET #{offset}
    </select>

    <select id="count" resultType="long">
        SELECT COUNT(1)
        FROM teachers
        <where>
            <if test="keyword != null and keyword != ''">
                (name LIKE CONCAT('%', #{keyword}, '%') OR teacher_id LIKE CONCAT('%', #{keyword}, '%'))
            </if>
            <if test="department != null and department != ''">
                AND department = #{department}
            </if>
        </where>
    </select>

</mapper>


