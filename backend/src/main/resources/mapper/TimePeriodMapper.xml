<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fx.backend.mapper.TimePeriodMapper">

    <resultMap id="TimePeriodResultMap" type="com.fx.backend.domain.entity.TimePeriod">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="startDate" column="start_date"/>
        <result property="endDate" column="end_date"/>
        <result property="isActive" column="is_active"/>
        <result property="createdBy" column="created_by"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <insert id="insert" parameterType="com.fx.backend.domain.entity.TimePeriod" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO time_periods (name, description, start_date, end_date, is_active, created_by)
        VALUES (#{name}, #{description}, #{startDate}, #{endDate}, #{isActive}, #{createdBy})
    </insert>

    <update id="update" parameterType="com.fx.backend.domain.entity.TimePeriod">
        UPDATE time_periods
        SET name = #{name}, description = #{description}, start_date = #{startDate}, end_date = #{endDate}, is_active = #{isActive}
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM time_periods WHERE id = #{id}
    </delete>

    <select id="findById" resultMap="TimePeriodResultMap">
        SELECT * FROM time_periods WHERE id = #{id}
    </select>

    <select id="listActive" resultMap="TimePeriodResultMap">
        SELECT * FROM time_periods WHERE is_active = TRUE ORDER BY start_date DESC
    </select>

    <select id="listAll" resultMap="TimePeriodResultMap">
        SELECT * FROM time_periods ORDER BY created_at DESC
    </select>

    <select id="countActiveNow" resultType="int">
        SELECT COUNT(1)
        FROM time_periods
        WHERE is_active = TRUE AND start_date &lt;= #{now} AND end_date &gt;= #{now}
    </select>

</mapper>


